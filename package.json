{
  "name": "changelog-parser-action",
  "version": "1.0.0",
  "description": "GitHub Action to read and parse CHANGELOG.md files from local paths or remote URLs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package": "npm run build",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='integration|e2e'",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e --testTimeout=30000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:act": "act -W .github/workflows/tests.yml --eventpath .github/workflows/.act/event-workflow_call.json",
    "test:act:verbose": "act -W .github/workflows/tests.yml --eventpath .github/workflows/.act/event-workflow_call.json -v",
    "test:act:ci": "act -W .github/workflows/ci.yml",
    "test:act:e2e": "act workflow_dispatch -W .github/workflows/e2e-tests.yml --eventpath .github/workflows/.act/event-workflow_dispatch.json",
    "test:act:release": "act push --eventpath .github/workflows/.act/event-release.json",
    "lint:act": "act -W .github/workflows/ci.yml -j lint",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "github-action",
    "changelog",
    "parser",
    "keep-a-changelog"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}

